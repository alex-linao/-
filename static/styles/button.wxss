.btn {
	position: relative;
	margin: 20rpx;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-size: 32rpx;
	border: 0 !important;
	border-radius: 4rpx;
	color: #fff !important;
	white-space: nowrap;
	letter-spacing: 2px;
	vertical-align: middle;
	background: #f7f7f7 !important;
	box-shadow: inset 0 0 0 1px rgba(0,0,0,.1);
}

.btn-hover {
	opacity: .9;
}

.btn-long {
	margin: 0;
	width: 100%;
	border-radius: 0;
	box-shadow: none;
}

.btn-large {
	height: 96rpx;
	line-height: 96rpx;
}

.btn-small {
	height: 80rpx;
	line-height: 80rpx;
}

.btn-primary {
	color: #fff !important;
	background: #2d8cf0 !important;
}

.btn-ghost {
	background: #fff !important;
	color: #495060 !important;
}

.btn-success {
	color: #fff !important;
	background: #19be6b !important;
}

.btn-warning {
	color: #fff !important;
	background: #FFA07A !important;
}

.btn-error {
	color: #fff !important;
	background: #ed3f14 !important;
}

.btn-info {
	color: #fff !important;
	background: #2db7f5 !important;
}

.btn-circle {
	border-radius: 80rpx;
}

.btn-large.btn-circle {
	border-radius: 96rpx;
}

.btn-small.btn-circle {
	border-radius: 80rpx;
}

.btn-loading {
	opacity: .6;
}

.btn-loading-inner {
	display: inline-block;
	margin-right: 48rpx;
	vertical-align: middle;
	width: 32rpx;
	height: 32rpx;
	background: 0 0;
	border-radius: 50%;
	border: 4rpx solid #fff;
	border-color: #fff #fff #fff transparent;
	animation: btn-spin .6s linear;
	animation-iteration-count: infinite;
}

.btn-disabled {
	color: #bbbec4 !important;
	background: #f7f7f7 !important;
}

.btn-inline {
	display: inline-block;
}

@keyframes btn-spin {
	0% {
		transform: rotate(0);
	}

	100% {
		transform: rotate(360deg);
	}
}