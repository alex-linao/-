.swipeout-wrap {
  background: #eee;
  position: relative;
  overflow: hidden;
}

.swipeout-item {
  width: 100%;
  box-sizing: border-box;
  transition: transform 0.2s ease;
  font-size: 14px;
}

.swipeout-content {
  white-space: nowrap;
  overflow: hidden;
}

.swipeout-button-group {
  position: absolute;
  right: -100%;
  top: 0;
  height: 100%;
  z-index: 1;
  width: 100%;
}

.swipeout-button-item {
  height: 100%;
  float: left;
  white-space: nowrap;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}
