._shade {
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.55);
  z-index: 1000;
  animation: shodow 0.1s ease-in-out;
}

@keyframes shodow {
  from {
    opacity: 0;
  } to {
    opacity: 1;
  }
}

._tool {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
  z-index: 1001;
  animation: tool 0.1s ease-in;
}

@keyframes tool {
  from {
    bottom: -50rpx;
  } to {
    bottom: 0;
  }
}

._item {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 16px;
  color: #333;
  text-align: center;
}

.cancel {
  border-top: 20rpx solid #f5f5f5;
}

.btn-hover {
  background: #fdfdfd;
}
